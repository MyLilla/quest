<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="MyApp" packages="">

        <Appenders>

                  <RollingFile name="RollingFile" fileName="D:/logs/app.log"
                         filePattern="logs/app-%d{MM-dd-yyyy}.log.gz">>
                <PatternLayout>
                    <pattern>%d %p %c{1.} [%t] %m%n</pattern>
                </PatternLayout>
                <Policies>
                    <TimeBasedTriggeringPolicy />
                    <SizeBasedTriggeringPolicy size="250 MB"/>
                </Policies>
            </RollingFile>

            <RollingFile name="ErrorFile" fileName="D:/logs/error.log"
                         filePattern="logs/error-%d{MM-dd-yyyy}.log.gz">>
                <PatternLayout>
                    <pattern>%d %p %c{1.} [%t] %m%n</pattern>
                </PatternLayout>
                <Policies>
                    <TimeBasedTriggeringPolicy />
                    <SizeBasedTriggeringPolicy size="250 MB"/>
                </Policies>
            </RollingFile>

    </Appenders>
    <Loggers>
        <Logger name="InitServlet" level="info">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="LogicServlet" level="info">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="FinishServlet" level="info">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="AIContentList" level="info">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="AIQuest" level="info">
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Root level="error">
            <AppenderRef ref="ErrorFile"/>
        </Root>

    </Loggers>
</Configuration>