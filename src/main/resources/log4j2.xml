<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="MyApp" packages="">

        <Appenders>

            <Console name="LogConsole" target="SYSTEM_OUT" >
                <PatternLayout pattern="%d{DEFAULT} %-5p %c: %m%n"/>
            </Console>

        <RollingFile name="File" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>
    <Loggers>
        <Logger name="InitServlet" level="info">
            <AppenderRef ref="rollingFile"/>
        </Logger>
        <Logger name="CreateService" level="info">
            <AppenderRef ref="rollingFile"/>
        </Logger>
        <Logger name="QuestService" level="info">
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="LogicServlet" level="info">
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="FinishServlet" level="info">
            <AppenderRef ref="File"/>
        </Logger>

        <Root name="InitServlet" level="info">
            <AppenderRef ref="LogConsole"/>
        </Root>

    </Loggers>
</Configuration>